{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "Node",
    "types": ["node", "jest"],
    "lib": ["es2020"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./backend/types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "backend/src/**/*",
    "backend/types/**/*",
    "scripts",
    "tests"
  ],
  "exclude": ["node_modules"]
}
